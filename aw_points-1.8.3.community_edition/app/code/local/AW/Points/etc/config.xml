                        <class>points/observer</class>
                        <method>addPointsForReview</method>
                    </aw_points_add_points_for_review>
                </observers>
            </review_save_before>
            <model_save_after>
                <observers>
                    <aw_points_add_points_for_participate_in_poll>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>modelSaveAfter</method>
                    </aw_points_add_points_for_participate_in_poll>
                </observers>
            </model_save_after>
            <adminhtml_customer_prepare_save>
                <observers>
                    <aw_points_update_points>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>updatePointsFromCustomerEdit</method>
                    </aw_points_update_points>
                    <aw_points_save_subscription>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>updatePointsNotificationFromCustomerEdit</method>
                    </aw_points_save_subscription>
                </observers>
            </adminhtml_customer_prepare_save>
            <controller_action_predispatch>
                <observers>
                    <aw_points_global_controller_predispatch>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>pageLoadBeforeGlobal</method>
                    </aw_points_global_controller_predispatch>
                    <aw_points_subscriber_model_rewrite>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>subscriberModelDRewrite</method>
                    </aw_points_subscriber_model_rewrite>
                </observers>
            </controller_action_predispatch>
            <aw_points_vt_added>
                <observers>
                    <aw_points_add_points_for_video_testimonial>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>addPointsForVideoTestimonial</method>
                    </aw_points_add_points_for_video_testimonial>
                </observers>
            </aw_points_vt_added>
            <controller_action_postdispatch_customer_account_createpost>
                <observers>
                    <aw_points_postdispatch_customer_account_createpost>
                        <class>points/observer</class>
                        <method>postdispatchCustomerAccountCreatePost</method>
                    </aw_points_postdispatch_customer_account_createpost>
                </observers>
            </controller_action_postdispatch_customer_account_createpost>
            <controller_action_postdispatch_checkout_onepage_saveOrder>
                <observers>
                    <aw_points_postdispatch_checkout_onepage_saveOrder>
                        <class>points/observer</class>
                        <method>postdispatchCustomerAccountCreatePost</method>
                    </aw_points_postdispatch_checkout_onepage_saveOrder>
                </observers>
            </controller_action_postdispatch_checkout_onepage_saveOrder>
            <controller_action_postdispatch_aw_onestepcheckout_ajax_placeOrder>
                <observers>
                    <aw_points_postdispatch_aw_onestepcheckout_ajax_placeOrder>
                        <class>points/observer</class>
                        <method>postdispatchCustomerAccountCreatePost</method>
                    </aw_points_postdispatch_aw_onestepcheckout_ajax_placeOrder>
                </observers>
            </controller_action_postdispatch_aw_onestepcheckout_ajax_placeOrder>
            <sagepaysuite_direct_request_post_before>
                <observers>
                    <aw_points_sagepaysuite_direct_request_post_before>
                        <class>points/observer</class>
                        <method>prepareSagePayBasket</method>
                    </aw_points_sagepaysuite_direct_request_post_before>
                </observers>
            </sagepaysuite_direct_request_post_before>
            <aw_pq2_answer_save_after>
                <observers>
                    <aw_points_answer_save_after>
                        <class>points/observer</class>
                        <method>answerSaveAfter</method>
                    </aw_points_answer_save_after>
                </observers>
            </aw_pq2_answer_save_after>
        </events>
        <sales>
            <quote>
                <totals>
                    <points>
                        <class>points/total_quote_points</class>
                        <after>weee,discount,tax,tax_subtotal,grand_total</after>
                        <renderer>points/checkout_total</renderer>
                    </points>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <points>
                        <class>points/total_invoice_points</class>
                    </points>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <points>
                        <class>points/total_creditmemo_points</class>
                        <after>subtotal</after>
                    </points>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <aw_giftwrap>
                    <model>points/total_pdf_points</model>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>650</sort_order>
                </aw_giftwrap>
            </totals>
        </pdf>
    </global>
    <frontend>
        <translate>
            <modules>
                <AW_Points>
                    <files>
                        <default>AW_Points.csv</default>
                    </files>
                </AW_Points>
            </modules>
        </translate>
        <layout>
            <updates>
                <aw_points module="AW_Points">
                    <file>aw_points.xml</file>
                </aw_points>
            </updates>
        </layout>
        <routers>
            <points>
                <use>standard</use>
                <args>
                    <module>AW_Points</module>
                    <frontName>points</frontName>
                </args>
            </points>
        </routers>
        <events>
            <controller_action_predispatch>
                <observers>
                    <aw_points_front_controller_predispatch>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>pageLoadBeforeFront</method>
                    </aw_points_front_controller_predispatch>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch>
                <observers>
                    <aw_points_controller_action_postdispatch>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>checkOnCartWasUpdated</method>
                    </aw_points_controller_action_postdispatch>
                </observers>
            </controller_action_postdispatch>
            <newsletter_subscriber_save_after>
                <observers>
                    <aw_points_add_points_for_subscription>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>addPointsForSubscription</method>
                    </aw_points_add_points_for_subscription>
                </observers>
            </newsletter_subscriber_save_after>
            <customer_save_before>
                <observers>
                    <aw_points_customer_save_observer>
