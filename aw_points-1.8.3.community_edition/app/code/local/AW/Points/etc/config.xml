                    <aw_points_add_points>
                        <type>singleton</type>
                        <class>points/observer</class>
                        <method>paymentAddPoints</method>
                    </aw_points_add_points>
                </observers>
            </sales_quote_payment_import_data_before>
            <review_save_before>
