?><?php /* @var $this AW_Points_Block_Catalog_Product_Points */ ?>
<?php $helperConfig = Mage::helper('points/config'); ?>
<div>
    <?php if ($this->canShow()): ?>
        <ul class="messages">
            <li class="points-notice-msg">
                <ul>
                    <li>
                        <?php if ($this->getMoney()) : ?>
                            <?php echo $this->__('Purchasing this item will earn you %s reward points (%s %s) !', $this->getPoints(), $helperConfig->getPointUnitName(), Mage::app()->getStore()->convertPrice($this->getMoney(), true)); ?>
                        <?php else : ?>
                            <?php echo $this->__('Purchasing this item will earn you %s %s !', $this->getPoints(), $helperConfig->getPointUnitName()) ?>
                        <?php endif; ?>
                        <?php echo $this->getChildHtml('infopage.link') ?>
                    </li>
                    <?php if ($this->customerIsGuest()): ?>
                        <li>
                            <?php echo $this->__('Applies only to registered customers, may vary when logged in.') ?>
                        </li>
                    <?php endif; ?>
                </ul>
            </li>
        </ul>
    <?php endif; ?>
</div>