$rule = Mage::registry('points_rule_data');
?>
<script type="text/javascript">
    function saveAs(){
        var value = prompt('<?php echo Mage::helper('points')->__('Please enter new rule name') ?>', '<?php echo Mage::helper('points')->__('Copy ') . $rule->getName() ?>');
        if(!value) {
            return false;
        } else {
            $('rule_name').value = value;
        }
        $('rule_save_as_flag').value = '1';
        editForm.submit();
        return false;
    }
</script>