?><?php if (count($this->getAwGiftCards()) > 0): ?>
    <?php foreach($this->getAwGiftCards() as $card):?>
        <tr>
            <th colspan="<?php echo $this->getColspan(); ?>" style="<?php echo $this->getTotal()->getStyle() ?>" class="a-right">
                <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?>
                    <strong>
                <?php endif; ?>
                <?php $_title = $this->__('Remove'); ?>
                <?php
                    $_url = Mage::getUrl('awgiftcard/card/remove',
                        array(
                             '_secure' => Mage::app()->getStore(true)->isCurrentlySecure(),
                             'giftcard_code' => base64_encode($card->getCode())
                        )
                    );
                ?>
                <a href="<?php echo $_url; ?>" title="<?php echo $_title; ?>" class="giftcard-btn-remove"><img src="<?php echo $this->getSkinUrl('images/btn_remove.gif') ?>" alt="<?php echo $this->__('Remove')?>" style="display: inline;" /></a>

                <?php echo $this->__('Gift Card (%s)', $card->getCode()); ?>
                <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?>
                    </strong>
                <?php endif; ?>
            </th>
            <td style="<?php echo $this->getTotal()->getStyle() ?>" class="a-right">
                <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?>
                    <strong>
                <?php endif; ?>
                -<?php echo $this->helper('checkout')->formatPrice($card->getGiftcardAmount()) ?>
                <?php if ($this->getRenderingArea() == $this->getTotal()->getArea()): ?>
                    </strong>
                <?php endif; ?>
            </td>
        </tr>
    <?php endforeach;?>
<?php endif;?>
