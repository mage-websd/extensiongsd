</script>
<div id="catalog_product_composite_configure_fields_downloadable" class="aw-gc-form <?php echo $this->getIsLastFieldset() ? 'last-fieldset' : '' ?>">

    <?php if (!$_product->isAvailable() && !$_skipSaleableCheck): ?>
