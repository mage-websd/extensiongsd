                        <div class="input-box">
                            <input type="text" id="aw_gc_sender_email" name="aw_gc_sender_email" class="validate-email required-entry input-text" value="<?php echo $this->escapeHtml($preconfiguredValues->getData('aw_gc_sender_email')) ?>"/>
                        </div>
                    </div>
                    <?php endif; ?>
                </li>
