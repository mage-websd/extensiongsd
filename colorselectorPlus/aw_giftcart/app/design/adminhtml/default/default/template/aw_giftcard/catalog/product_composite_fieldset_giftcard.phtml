                        </label>
                        <div class="input-box">
                            <textarea name="aw_gc_message" id="aw_gc_message" class="input-text" cols="80" rows="8"><?php echo $this->escapeHtml($preconfiguredValues->getData('aw_gc_message')) ?></textarea>
                        </div>
                    </div>
                </li>
                <?php endif; ?>
            </ul>
        </div>
        <?php endif; ?>
    </div>
</div>