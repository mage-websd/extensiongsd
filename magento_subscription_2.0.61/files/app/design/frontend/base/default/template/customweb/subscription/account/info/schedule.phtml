        <th class="label"><?php echo $helper->__('Start Date') ?></th>
        <td class="value"><?php echo Mage::helper('core')->formatDate($subscription->getStartDatetime(), 'medium', true) ?></td>
    </tr>
    <tr>
        <th class="label"><?php echo $helper->__('Billing Period') ?></th>
        <td class="value"><?php echo $renderHelper->renderPlan($subscription->getPlan()) ?></td>
    </tr>
